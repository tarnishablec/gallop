{
  "name": "gallop",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "node ./instruments/cli/index.js --command build -z1",
    "dev": "node ./instruments/cli/index.js --command dev -z1",
    "upgrade": "node ./instruments/cli/index.js --command upgrade --emptyIsRoot -z1",
    "clean": "node ./instruments/cli/index.js --command clean -z1",
    "test": "jest",
    "coveralls": "jest --coverage && coveralls < coverage/lcov.info",
    "build:doc": "yarn workspace @gallop/doc run build",
    "debug": "yarn dev doc"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "packages/*/dist/*",
    "node_modules"
  ],
  "devDependencies": {
    "2string-loader": "^1.0.0",
    "@jest-runner/electron": "^3.0.1",
    "@microsoft/api-extractor": "^7.18.4",
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.24",
    "@types/marked": "^2.0.4",
    "@types/memory-fs": "^0.3.3",
    "@types/prismjs": "^1.16.6",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "@wessberg/rollup-plugin-ts": "^1.3.14",
    "autoprefixer": "^10.3.1",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.10",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.2.4",
    "compression-webpack-plugin": "^8.0.1",
    "copy-webpack-plugin": "^9.0.1",
    "coveralls": "^3.1.1",
    "css-loader": "^6.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^13.1.7",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^36.0.6",
    "execa": "^5.1.1",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "fs-extra": "^10.0.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^4.3.7",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "link-file-plugin": "^0.0.19",
    "lint-staged": "^11.1.1",
    "loader-utils": "^2.0.0",
    "mini-css-extract-plugin": "^2.1.0",
    "minimist": "^1.2.5",
    "npm-check-updates": "^11.8.3",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.2",
    "prettier-plugin-jsdoc": "^0.3.23",
    "query-string": "^7.0.1",
    "raw-loader": "^4.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.37.0",
    "sass-loader": "^12.1.0",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "style-loader": "^3.2.1",
    "terser-webpack-plugin": "^5.1.4",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "typescript": "^4.3.5",
    "url-loader": "^4.1.1",
    "vite": "^2.4.4",
    "webpack": "^5.48.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "worker-loader": "^3.0.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
