{
  "name": "gallop",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "init": "node ./scripts/init.js",
    "boot": "node ./scripts/bootstrap.js",
    "new": "node ./scripts/new.js",
    "build": "node ./scripts/build.js",
    "clean": "node ./scripts/clean.js",
    "upgrade": "node ./scripts/upgrade.js",
    "release": "node ./scripts/release.js",
    "sand": "yarn workspace @gallop/sandbox start",
    "doc": "yarn workspace @gallop/doc start",
    "test": "jest",
    "coveralls": "jest --coverage && coveralls < coverage/lcov.info",
    "build:doc": "yarn workspace @gallop/doc run build",
    "debug": "node ./scripts/debug.js"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "packages/*/dist/*"
  ],
  "devDependencies": {
    "@jest-runner/electron": "^3.0.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.10",
    "@types/marked": "^1.1.0",
    "@types/memory-fs": "^0.3.2",
    "@types/prismjs": "^1.16.1",
    "@types/webpack": "^4.41.21",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "@wessberg/rollup-plugin-ts": "^1.3.2",
    "autoprefixer": "^9.8.6",
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0-rc.3",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^4.0.1",
    "copy-webpack-plugin": "^6.0.3",
    "coveralls": "^3.1.0",
    "css-loader": "^4.2.1",
    "electron": "^9.2.0",
    "eslint": "^7.7.0",
    "execa": "^4.0.3",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "link-file-plugin": "^0.0.3",
    "lint-staged": "^10.2.11",
    "loader-utils": "^2.0.0",
    "mini-css-extract-plugin": "^0.10.0",
    "minimist": "^1.2.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "prettier-plugin-jsdoc": "^0.0.24",
    "raw-loader": "^4.0.1",
    "rollup": "^2.26.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.3",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.1.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "worker-loader": "^3.0.1"
  }
}
