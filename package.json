{
  "name": "gallop",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "init": "node ./scripts/init.js",
    "boot": "node ./scripts/bootstrap.js",
    "new": "node ./scripts/new.js",
    "build": "node ./scripts/build.js",
    "clean": "node ./scripts/clean.js",
    "upgrade": "node ./scripts/upgrade.js",
    "release": "node ./scripts/release.js",
    "sand": "yarn workspace @gallop/sandbox start",
    "doc": "yarn workspace @gallop/doc start",
    "test": "jest",
    "coveralls": "jest --coverage && coveralls < coverage/lcov.info",
    "build:doc": "yarn workspace @gallop/doc run build",
    "debug": "node ./scripts/debug.js"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "packages/*/dist/*",
    "node_modules"
  ],
  "devDependencies": {
    "2string-loader": "^1.0.0",
    "@jest-runner/electron": "^3.0.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.15",
    "@types/marked": "^1.1.0",
    "@types/memory-fs": "^0.3.2",
    "@types/prismjs": "^1.16.1",
    "@types/webpack": "^4.41.23",
    "@types/webpack-env": "^1.15.3",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "@wessberg/rollup-plugin-ts": "^1.3.7",
    "autoprefixer": "^10.0.1",
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0-rc.3",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.2.2",
    "compression-webpack-plugin": "^6.0.4",
    "copy-webpack-plugin": "^6.2.1",
    "coveralls": "^3.1.0",
    "css-loader": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^10.1.5",
    "eslint": "^7.12.1",
    "eslint-plugin-jsdoc": "^30.7.3",
    "execa": "^4.0.3",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.1.1",
    "fs-extra": "^9.0.1",
    "html-webpack-plugin": "^5.0.0-alpha.7",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "link-file-plugin": "^0.0.18",
    "lint-staged": "^10.5.0",
    "loader-utils": "^2.0.0",
    "mini-css-extract-plugin": "^1.2.0",
    "minimist": "^1.2.5",
    "npm-check-updates": "^9.2.3",
    "postcss-loader": "^4.0.4",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "prettier-plugin-jsdoc": "^0.2.0",
    "raw-loader": "^4.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.4",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.1",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0",
    "worker-loader": "^3.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
