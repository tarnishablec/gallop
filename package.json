    "terser-webpack-plugin": "^5.2.4",
    "ts-jest": "26.x",
    "ts-loader": "^9.2.5",
    "type-fest": "^2.3.3",
    "typescript": "^4.4.3",
    "url-loader": "^4.1.1",
    "vite": "^2.5.8",
    "vite-plugin-markdown": "^2.0.2",
    "vite-plugin-string": "^1.0.1",
    "vite-tsconfig-paths": "^3.3.14",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1",
    "worker-loader": "^3.0.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
