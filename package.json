{
  "name": "gallop",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "release": "node ./instruments/cli/index.js --command release --emptyIsRoot -z1",
    "build": "node ./instruments/cli/index.js --command build -z1",
    "clean": "node ./instruments/cli/index.js --command clean --ignoreBlackList -z1",
    "dev": "node ./instruments/cli/index.js --command dev -z1",
    "upgrade": "node ./instruments/cli/index.js --command upgrade --emptyIsRoot -z1",
    "test": "jest",
    "create": "node ./instruments/cli/index.js --command create",
    "init": "node ./instruments/cli/index.js --command init",
    "coveralls": "jest --coverage && coveralls < coverage/lcov.info",
    "build:doc": "yarn run build doc",
    "build:real": "yarn run build real",
    "debug": "yarn run build doc --bundler vite",
    "debug:dev": "yarn dev doc",
    "prepare": "husky install",
    "postinstall": "npm install -g commitizen"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "packages/*/dist/*",
    "node_modules"
  ],
  "devDependencies": {
    "2string-loader": "^1.0.0",
    "@microsoft/api-extractor": "^7.18.9",
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/pluginutils": "^4.1.1",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.173",
    "@types/marked": "^3.0.1",
    "@types/memory-fs": "^0.3.3",
    "@types/prismjs": "^1.16.6",
    "@types/sass": "^1.16.1",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "autoprefixer": "^10.3.4",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.10",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.4",
    "compression-webpack-plugin": "^9.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "coveralls": "^3.1.1",
    "css-loader": "^6.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsdoc": "^36.1.0",
    "execa": "^5.1.1",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "fs-extra": "^10.0.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "jest": "26.x",
    "lerna": "^4.0.0",
    "link-file-plugin": "^0.0.19",
    "lint-staged": "^11.1.2",
    "loader-utils": "^2.0.0",
    "mini-css-extract-plugin": "^2.3.0",
    "minimist": "^1.2.5",
    "npm-check-updates": "^11.8.5",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "prettier-plugin-jsdoc": "^0.3.24",
    "query-string": "^7.0.1",
    "raw-loader": "^4.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.4.2",
    "sass": "^1.41.1",
    "sass-loader": "^12.1.0",
    "simple-git": "^2.45.1",
